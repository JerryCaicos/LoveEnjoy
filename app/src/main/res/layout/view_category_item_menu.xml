<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_category_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_category_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_blue_btn_bg_rect"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="24dip"
            android:paddingRight="24dip"
            android:text="@string/string_category_item_edit"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/view_category_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_pink_btn_bg_rect"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="24dip"
            android:paddingRight="24dip"
            android:text="@string/string_category_item_delete"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>